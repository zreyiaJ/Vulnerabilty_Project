                        @Html.EditorFor(model => model.EngineerID, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.EngineerID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.ActionTaken, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
